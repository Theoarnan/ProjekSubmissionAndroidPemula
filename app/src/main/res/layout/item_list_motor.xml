<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:id="@+id/listd">

        <ImageView
            android:id="@+id/img_item_motor"
            android:layout_width="122dp"
            android:layout_height="147dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            tools:src="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_nama_motor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/img_item_motor"
            android:layout_toRightOf="@id/img_item_motor"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@string/nama_motor" />

        <TextView
            android:id="@+id/tv_desk_motor"
            android:layout_width="255dp"
            android:layout_height="69dp"
            android:layout_below="@id/tv_nama_motor"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@id/img_item_motor"
            android:layout_toRightOf="@id/img_item_motor"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="@string/deskripsi" />

        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="225dp"
            android:layout_height="31dp"
            android:layout_below="@+id/tv_desk_motor"
            android:layout_alignBottom="@+id/img_item_motor"
            android:layout_alignParentStart="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:text="Rp.10.000.000" />


    </RelativeLayout>

</android.support.v7.widget.CardView>